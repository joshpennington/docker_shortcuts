{
    "platforms": [
        {
            "name": "nix",
            "outputDirectory": "out/nix/",
            "pwd": "$(pwd)",
            "outputFilePrefix": "#! /bin/bash\n\n",
            "fileExtension": ""
        },
        {
            "name": "powershell",
            "outputDirectory": "out/powershell/",
            "pwd": "{PWD}",
            "outputFilePrefix": "",
