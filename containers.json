{
    "buildOptions": {
        "addScripts": true,
        "scriptsLocation": "~/docker_scripts"
    },
    "platforms": [
        {
            "name": "nix",
            "outputDirectory": "nix/",
            "pwd": "$(pwd)",
            "outputFilePrefix": "#! /bin/bash\n\n",
            "fileExtension": "",
            "cliParametersProcessing": [
                "port=\"###DEFAULT_PORT###\"",
                "cmd=\"###DEFAULT_COMMAND###\"",

                "for var in \"$@\"",
                "do",
                "    if [[ $var == *\"-p=\"* ]]; then",
                "        IFS='='",
                "        read -ra ADDR <<< \"$var\"",
                "        port=\"$port -p ${ADDR[1]}\" ",
                "        IFS=' '",
                "    else",
                "        cmd=\"$cmd $var\"",
                "    fi",
                "done"
            ]
        }
    ],
    "customCommands": [
        {
            "name": "dcleanup",
            "command": "docker image prune -af"    
        },
        {
            "name": "dnetworksetup",
            "command": "docker network create dockernet"    
        }
    ],
    "containersToBuild": [
    	
    ]
}